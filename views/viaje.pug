extends ./layout/index

block contenido 
    main.container.mt-5 
        .row 
            .col-md-5 
                //- consultando la imagen ubicada en la DB
                img(src=`/img/destinos_${viaje.imagen}_ln.jpg`, alt="imagen viaje", class="img-fluid")
